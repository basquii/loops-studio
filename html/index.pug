doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="icon" type="image/png" sizes="32x32" href="./images/favicon-32x32.png")
    link(rel="stylesheet", href="./css/vendor/normalize.css")
    link(rel="stylesheet", href="./css/style.css")
    <script src="https://use.fontawesome.com/381a5204ff.js"></script>
    title Frontend Mentor | Loopstudios landing page
  body
    .header
      .container
        .content
          .logo 
            img(src="./images/logo.svg", alt="logo - loopstudios")
          - let eles = ["About", "Careers", "Events", "Products", "Support"];
          .icon: img.burger(src="./images/icon-hamburger.svg", alt="icon - hamburger")
          ul.nav
            each ele in eles
              li.list-item: a(href="#" class="link")= ele
        .text: h1 Immersive experiences that deliver
      ul.nav-mobile.go
        .li-holder
          each ele in eles
            li.list-item: a(href="#" class="link")= ele
    .vr
      .container
        .img
          picture
            source(media="(min-width: 768px)", srcset="./images/desktop/image-interactive.jpg")
            img.svg(src="./images/mobile/image-interactive.jpg", alt="vr -")
        .text
          h2 The leader in interactive VR
          p Founded in 2011, Loopstudios has been producing world-class virtual reality projects for some of the best companies around the globe. Our award-winning creations have transformed businesses through digital experiences that bind to their brand.
    .galary
      .container
        .heading
          h2 Our creations
          a(href="#") See all
        .images
          .column
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-deep-earth.jpg")
                  img.svg(src="./images/mobile/image-deep-earth.jpg", alt="galary")
                .text deep #[br] earth
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-night-arcade.jpg")
                  img.svg(src="./images/mobile/image-night-arcade.jpg", alt="galary")
                .text Night #[br] arcade
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-soccer-team.jpg")
                  img.svg(src="./images/mobile/image-soccer-team.jpg", alt="galary")
                .text Soccer #[br] team VR
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-grid.jpg")
                  img.svg(src="./images/mobile/image-grid.jpg", alt="galary")
                .text The #[br] grid
          .column
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-from-above.jpg")
                  img.svg(src="./images/mobile/image-from-above.jpg", alt="galary")
                .text from up #[br] above vr
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-pocket-borealis.jpg")
                  img.svg(src="./images/mobile/image-pocket-borealis.jpg", alt="galary")
                .text pocket #[br] borealis
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-curiosity.jpg")
                  img.svg(src="./images/mobile/image-curiosity.jpg", alt="galary")
                .text the #[br] curiosity
              .img
                picture
                  source(media="(min-width: 768px)", srcset="./images/desktop/image-fisheye.jpg")
                  img.svg(src="./images/mobile/image-fisheye.jpg", alt="galary")
                .text make it #[br] fisheye
    .footer
      .container
        .column
          .logo: img.svg(src="./images/logo.svg", alt="logo - loopstudio")
          - let contacts = ["facebook", "twitter", "pinterest", "instagram"]
          ul.list
            each item in eles
              li.list-item: a(href="#")= item
        .column
          .social
            each contact in contacts
              .hold: img.icon(src="./images/icon-" + contact +".svg", alt="socialMedia - facebook")
          p © 2021 Loopstudios. All rights reserved.
    script(src="./js/main.js")

